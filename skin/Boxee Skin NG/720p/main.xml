					<posx>10</posx>
					<posy>10</posy>
					<width>380</width>
					<height>62</height>
					<info>Listitem.Thumb</info>
					<aspectratio>scale</aspectratio>
					<bordertexture>mb_thumb_hover_bg.png</bordertexture>
					<bordersize>3</bordersize>
