					<posx>385</posx>
					<posy>76</posy>
					<width>152</width>
					<height>60</height>
					<align>right</align>
					<aligny>top</aligny>
					<label>Recordings: $INFO[ListItem.property(custom:videos)]</label>
					<font>font14</font>
					<textcolor>FFCCCCCC</textcolor>
				</control>
			</itemlayout>
