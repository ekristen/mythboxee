					<posx>0</posx>
					<posy>0</posy>
					<width>400</width>
					<height>100</height>
					<texture border="5">mb_item_big.png</texture>
				</control>
				<control type="image">
					<description>thumbnail</description>
					<posx>10</posx>
					<posy>10</posy>
					<width>380</width>
					<height>62</height>
					<info>Listitem.Thumb</info>
					<aspectratio>scale</aspectratio>
					<bordersize>3</bordersize>
					<bordertexture>mb_thumb_bg.png</bordertexture>
				</control>
